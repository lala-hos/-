<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>

<h1>投稿一覧</h1>

<% @books.each do |list| %>

  <p>タイトル</p>
  <span><%= list.title %></span>
  <%= link_to "show", book_path(list.id) %>
  <%= link_to "edit", edit_book_path(list.id) %>
<%= link_to "削除", book_path(list.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
<% end %>

<h1>新規投稿</h1>
<%= form_with model: Book.new do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
<% end %>

